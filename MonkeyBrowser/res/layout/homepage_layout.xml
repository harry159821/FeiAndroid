<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/homepage_root" android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:gravity="center">
	<GridView android:id="@+id/homepage" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:numColumns="4"
		android:verticalSpacing="15dp" android:horizontalSpacing="10dp"
		android:stretchMode="columnWidth" android:columnWidth="90dp"
		android:layout_marginTop="15dip"
		android:gravity="center" android:background="@color/bgcolor"></GridView>

</RelativeLayout>
