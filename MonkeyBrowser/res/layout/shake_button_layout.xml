<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/shake_root"
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">

	<FrameLayout android:id="@+id/shake_frame"
		android:layout_width="80dip" android:layout_height="80dip"
		android:orientation="vertical">
		<Button android:id="@+id/shake_button" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center" />
		<ImageView android:id="@+id/shake_cross"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_gravity="right"/>
	</FrameLayout>
</LinearLayout>