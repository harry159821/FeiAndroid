<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.njnu.kai.aidldemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:process="com.njnu.kai.aidldemo.client"
        android:theme="@style/AppTheme" >
        <activity
            android:name="AIDLClientMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-fileter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-fileter>
        </activity>

        <service
            android:name=".StockQuoteService"
            android:process="com.njnu.kai.aidldemo.service" >
            <intent-filter>
                <action android:name="com.njnu.kai.aidl.service.IStockQuoteService" />
            </intent-filter>
        </service>
    </application>

</manifest>